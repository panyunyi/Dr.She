<% include header %>
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row row-title">
                <div class="col-lg-12">
                    <h1 class="page-header">充值记录</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            充值成功记录表
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table id="table" class="ui celled table" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>序号</th>
                                        <th>订单号</th>
                                        <th>用户</th>
                                        <th>来源</th>
                                        <th>标题</th>
                                        <th>金额</th>
                                        <th>创建时间</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="../vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript-->
    <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="../vendor/metisMenu/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->

    <script src="../dist/js/sb-admin-2.js"></script>

    <script src="../dist/js/semantic.min.js"></script>
    <script src="../dist/js/jquery.dataTables.min.js"></script>
    <script src="../dist/js/dataTables.semanticui.min.js"></script>
    <script src="../dist/js/dataTables.buttons.min.js"></script>
    <script src="../dist/js/buttons.semanticui.min.js"></script>
    <script src="../dist/js/dataTables.select.min.js"></script>
    <script src="../dist/js/dataTables.editor.min.js"></script>
    <script src="../dist/js/editor.semanticui.min.js"></script>
    <script>
        var table = $('#table').DataTable({
            "processing": true,
            stateSave: true,
            "ajax": '../api/json/recharge',
            "columns": [
                { "data": null },
                { "data": "orderid",render: function (data) { return data ? data : ""} },
                { "data": "user" },
                { "data": "source" },
                { "data": "title" },
                { "data": "price" },
                { "data": "createdAt" }
            ],
            select: true,
            "order": [[6, 'desc']],
            "language": {
                "url": "../vendor/zh_CN.txt"
            },
            "columnDefs": [{
                // "visible": false,
                //"targets": 0
            }]
        });
        table.on('order.dt search.dt', function () {
            table.column(0, {
                search: 'applied',
                order: 'applied'
            }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();

    </script>
    </body>

    </html>