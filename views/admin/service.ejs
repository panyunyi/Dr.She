<% include header %>
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row row-title">
                <div class="col-lg-12">
                    <h1 class="page-header">客服管理</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            维修记录
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table id="table" class="ui celled table" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>序号</th>
                                        <th>维修单号</th>
                                        <th>回寄人</th>
                                        <th>手机</th>
                                        <th>回寄地址</th>
                                        <th>回寄单号</th>
                                        <th>状态</th>
                                        <th>购买渠道</th>
                                        <th>产品ID</th>
                                        <th>寄回数量</th>
                                        <th>故障原因</th>
                                        <th>快递</th>
                                        <th>备注</th>
                                        <th>创建时间</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="../vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="../vendor/metisMenu/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="../dist/js/sb-admin-2.js"></script>
    <script src="../dist/js/semantic.min.js"></script>
    <script src="../dist/js/jquery.dataTables.min.js"></script>
    <script src="../dist/js/dataTables.semanticui.min.js"></script>
    <script src="../dist/js/dataTables.buttons.min.js"></script>
    <script src="../dist/js/buttons.semanticui.min.js"></script>
    <script src="../dist/js/dataTables.select.min.js"></script>
    <script src="../dist/js/dataTables.editor.min.js"></script>
    <script src="../dist/js/editor.semanticui.min.js"></script>
    <script>
        var editor;
        $(document).ready(function () {
            editor = new $.fn.dataTable.Editor({
                ajax: {
                    create: {
                        type: 'POST',
                        url: '../api/json/service/add'
                    },
                    edit: {
                        type: 'PUT',
                        url: '../api/json/service/edit/_id_'
                    },
                    remove: {
                        type: 'DELETE',
                        url: '../api/json/service/remove/_id_'
                    }
                },
                table: "#table"
            });
            var table = $('#table').DataTable({
                "processing": true,
                stateSave: true,
                "dom": '<"top"rf>t<"bottom"ilp>',
                "ajax": '../api/json/service',
                "columns": [
                    { "data": null },
                    { "data": "orderid", render: function (data) { return data ? data : "" } },
                    { "data": "sender", render: function (data) { return data ? data : "" } },
                    { "data": "phone", render: function (data) { return data ? data : "" } },
                    { "data": "address", render: function (data) { return data ? data : "" } },
                    { "data": "delivery", render: function (data) { return data ? data : "" } },
                    { "data": "status", render: function (data) { if (data == 0) { return "待接收"; } } },
                    { "data": "wheretobuy", render: function (data) { return data ? data : "" } },
                    { "data": "productid", render: function (data) { return data ? data : "" } },
                    { "data": "count", render: function (data) { return data ? data : "" } },
                    { "data": "error", render: function (data) { return data ? data : "" } },
                    { "data": "express"},
                    { "data": "notice", render: function (data) { return data ? data : "" } },
                    { "data": "time", render: function (data) { return data ? data : "" } }
                ],
                select: true,
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "render": function(data, type, row) {
                        return data + row.express + row.expressid;
                    },
                    "targets": 11
                }],
                "createdRow": function (row, data, index) {
                    if (data.status==0) {
                        $('td', row).eq(6).css("color", "#e7505a");
                    } else {
                        $('td', row).eq(6).css("color", "#32c5d2");
                    }
                },
                "order": [[12, 'desc']],
                "language": {
                    "url": "../vendor/zh_CN.txt"
                }
            });
            table.on('order.dt search.dt', function () {
                table.column(0, {
                    search: 'applied',
                    order: 'applied'
                }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });

    </script>
    </body>

    </html>